<main>
    {{#each beers}}
        <div>
            <img src="{{this.image}}" alt="beer-image">
            <h2>{{this.name}}</h2>
            <p>{{this.description}}</p>
            <p>{{this.tagline}}</p>
            <p>{{this.food_pairing}}</p>
            <p>{{this.brewer_tips}}</p>
        </div>
    {{/each}}
</main>